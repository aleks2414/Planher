		<%= f.number_field :gas, required: true %>

		<br>

		<%= f.label :mantenimiento %><br>
		<%= f.number_field :mant, required: true %>

		<br>

		<%= f.label :nombre %><br>
		<%= f.text_field :name, required: true %>

		<br>

		<%= f.label :email %><br>
		<%= f.email_field :email, required: true %>

		<br>

		<div class="hidden">
